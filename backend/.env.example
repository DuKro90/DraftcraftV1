# Django
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
DB_NAME=draftcraft_dev
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# Email
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=noreply@draftcraft.de

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# File Storage
GCS_BUCKET_NAME=draftcraft-documents
GCP_PROJECT_ID=

# Celery/Redis
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Logging
DJANGO_LOG_LEVEL=INFO

# Encryption (Phase 4)
ENCRYPTION_ENABLED=False
ENCRYPTION_KEY=

# GCP (Phase 3)
GCP_CREDENTIALS=

# Agentic RAG Configuration (Phase 2 Enhancement)
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-1.5-flash
USE_MOCK_GEMINI=False
REDIS_URL=redis://localhost:6379/1
AGENT_MONTHLY_BUDGET_USD=50.00
AGENT_ALERT_THRESHOLD_PERCENT=80

# Sentry (optional)
SENTRY_DSN=

# ============================================================================
# Phase 4: GCP Cloud Run Deployment Variables
# ============================================================================

# Cloud Run Service Configuration
CLOUD_RUN_SERVICE_URL=https://draftcraft-xxxx-uc.a.run.app
GCP_REGION=europe-west3

# Cloud SQL Connection
# Format: PROJECT_ID:REGION:INSTANCE_NAME
CLOUD_SQL_CONNECTION_NAME=your-project:europe-west3:draftcraft-db

# Production Environment Flag
ENVIRONMENT=production

# Security: Use Secret Manager in production, not .env
# These should be stored in GCP Secret Manager:
# - DJANGO_SECRET_KEY
# - DB_PASSWORD
# - GEMINI_API_KEY
# - SENTRY_DSN (optional)

# Required for production
ALLOWED_HOSTS=draftcraft-xxxx-uc.a.run.app,your-custom-domain.com

# Database SSL Mode for Cloud SQL
DB_SSLMODE=require

# Static/Media Files (production uses GCS)
USE_GCS_FOR_MEDIA=True
STATIC_URL=/static/
MEDIA_URL=https://storage.googleapis.com/your-bucket-name/

# Cloud Tasks Queue (for async processing)
CLOUD_TASKS_PROJECT=your-project-id
CLOUD_TASKS_LOCATION=europe-west3
CLOUD_TASKS_QUEUE=extraction-queue

# Monitoring & Logging
USE_CLOUD_LOGGING=True
LOG_LEVEL=INFO
